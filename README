## setup sample target
$ wget http://llvm.org/releases/3.1/llvm-3.1.src.tar.gz
$ tar zxf llvm-3.1.src.tar.gz
$ cd llvm-3.1.src
$ patch -p1 < ../llvm-sample-target/config.patch
$ mv ../llvm-sample-target/Sample ./lib/Target/

## compile and install
$ mkdir ../build
$ cd ../build
$ ../llvm-3.1.src/configure --prefix=/opt/llvm --enable-debug-runtime --enable-assertions --enable-debug-symbols --disable-optimized --enable-debug-runtime
$ make -j4
$ sudo make install
